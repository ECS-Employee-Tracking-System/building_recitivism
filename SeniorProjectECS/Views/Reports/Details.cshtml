                </div>

                <input asp-for="Filter.TimeUntilExpire" class="form-control" />

                <input asp-for="Filter.ShouldCheckPositionReq" /> @Html.DisplayNameFor(model => model.Filter.ShouldCheckPositionReq)
                <input asp-for="Filter.IsInactive" /> @Html.DisplayNameFor(model => model.Filter.IsInactive)

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
