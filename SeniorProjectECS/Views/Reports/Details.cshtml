                    var isReq = '@cert.IsRequired';
                    isReqFixed = isReq.toLowerCase();
                    var DaysUnitlExp = '@cert.DaysUntilExpire'
                    console.log(staffID, certToJS, isReq, isReqFixed, certIDRazor);
                    //set all the object's values then push to array
