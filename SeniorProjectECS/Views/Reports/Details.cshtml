                    </div>
                </div>

                @CustomHTMLHelpers.BuildEditFromArray(Model.Filter.FirstName, "FirstName", "hidden")
                @CustomHTMLHelpers.BuildEditFromArray(Model.Filter.LastName, "LastName", "hidden")
                @CustomHTMLHelpers.BuildEditFromArray(Model.Filter.Email, "Email", "hidden")

                <div id="PositionList">
                    <select id="Position_0_" name="Position[0]" class="form-control"></select>
                </div>

                <input type="hidden" asp-for="Filter.BeginDateOfHire" class="form-control" />
                <input type="hidden" asp-for="Filter.EndDateOfHire" class="form-control" />
                <input type="hidden" asp-for="Filter.Goal" /> @Html.DisplayNameFor(model => model.Filter.Goal)
                <input type="hidden" asp-for="Filter.MidYear" /> @Html.DisplayNameFor(model => model.Filter.MidYear)
                <input type="hidden" asp-for="Filter.EndYear" /> @Html.DisplayNameFor(model => model.Filter.EndYear)
                <input type="hidden" asp-for="Filter.GoalMet" /> @Html.DisplayNameFor(model => model.Filter.GoalMet)
                <input type="hidden" asp-for="Filter.TAndAApp" /> @Html.DisplayNameFor(model => model.Filter.TAndAApp)
                <input type="hidden" asp-for="Filter.AppApp" /> @Html.DisplayNameFor(model => model.Filter.AppApp)
                <input type="hidden" asp-for="Filter.ClassCompleted" /> @Html.DisplayNameFor(model => model.Filter.ClassCompleted)
                <input type="hidden" asp-for="Filter.ClassPaid" /> @Html.DisplayNameFor(model => model.Filter.ClassPaid)
                <input type="hidden" asp-for="Filter.RequiredHours" class="form-control" />
                <input type="hidden" asp-for="Filter.HoursEarned" class="form-control" />
                <input type="hidden" asp-for="Filter.BeginTermDate" class="form-control" />
                <input type="hidden" asp-for="Filter.EndTermDate" class="form-control" />

                <div id="CertCompletedList">
